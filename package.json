{
  "name": "obj-doctor",
  "version": "1.0.0",
  "description": "A Node.js tool for cleaning and repairing 3D mesh files (OBJ format)",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "tsx src/main.ts",
    "test": "tsx --test src/**/*.spec.ts",
    "test:watch": "tsx --test --watch src/**/*.spec.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@thi.ng/geom-io-obj": "^0.3.189",
    "@thi.ng/object-utils": "^1.2.9",
    "@thi.ng/vectors": "^8.6.5"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "3.6.2",
    "tsx": "^4.20.5",
    "typescript": "^5.0.0"
  }
}
